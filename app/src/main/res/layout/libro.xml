<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_principal"
        app:title="BiblioGestor"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <TextView
            android:id="@+id/toolbar_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BiblioGestor"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

        <!-- Posicionar la imagen a la derecha -->
        <RelativeLayout
            android:id="@+id/btn_perfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TextView para el nombre -->
            <TextView
                android:id="@+id/modlibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modificar"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="100dp" />

            <!-- ImageView para la imagen -->
            <ImageView
                android:id="@+id/modlibro2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                app:tint="@color/white"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/modlibro"
                android:layout_marginEnd="1dp" />

            <!-- TextView para el nombre -->
            <TextView
                android:id="@+id/borrarlibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp" />

            <!-- ImageView para la imagen -->
            <ImageView
                android:id="@+id/borrarlibro2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                app:tint="@color/white"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/borrarlibro"
                android:layout_marginEnd="1dp" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/portadaLibro"
                android:layout_width="136dp"
                android:layout_height="215dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tituloLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrada-Titulo"
                android:textSize="28dp"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/disponibilidadLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:textSize="22dp"
                android:textColor="@color/titulo"
                android:gravity="center"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/autorLibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="8dp"
                android:layout_marginTop="16dp"/>


            <TextView
                android:id="@+id/editorialLibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_libro"
                android:drawablePadding="8dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/sinopsisLibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Sinopsis"
                android:drawablePadding="8dp"
                android:layout_marginTop="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/volverLibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volver a catÃ¡logo"
                android:textStyle="italic"
                android:textColor="@color/enlace"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
